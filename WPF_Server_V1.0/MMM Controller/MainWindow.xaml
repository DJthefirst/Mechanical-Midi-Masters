<Window x:Class="MMM_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMM_Controller"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="700">

        <Button Click = "HandleEvent1" Height="75">Button Test</Button>
        <Button Click = "HandleInitilize" Height="75">Initilize</Button>
        <StackPanel Orientation="Horizontal">
            <Button Click = "HandleStartMIDI" Height="75" Width="100" >Start MIDI</Button>
            <Button Click = "HandlePlayMIDI" Height="75" Width="100" >Play MIDI</Button>
            <Button Click = "HandleStopMIDI" Height="75" Width="100" >Stop MIDI</Button>
            <Button Click = "HandlePlayNoteMIDI" Height="75" Width="100" >Play MIDI Note</Button>
            <Button Click = "HandleTestMIDI" Height="75" Width="100" >MIDI Test</Button>
        </StackPanel>    
        <Button Click = "HandlePing" Height="75">Ping</Button>
        <Button Click = "HandleUDPmsg" Height="75">Msg</Button>

        <TextBox Height="200" Width="500" TextChanged="textChangedEventHandler" x:Name="TestBox"/>
    </StackPanel>
</Window>
